# END

# display the final scores and say who is the winner
print('Thank you for playing!\n Your final scores are:'
      '\n', name_1, ':', score1, 'point(s)\n ', name_2, ':', score2, 'point(s)'
      '\nThe winner is:')
if score1 > score2:
    print(name_1)
elif score2 < score1:
    print(name_2)
else:
    print('...The game ends in a draw, well played!')

# end timer, conversion of the time in (sec) into (h/min/sec) format and display time played
end = time.time()
time_played = end - start
hours = time_played//3600
minutes = time_played//60
seconds = time_played - 60*minutes
print("Time played:", '%d:%d:%d' % (hours, minutes, seconds))

# create database and save players info
score_file = "score.txt"
s = open(score_file, "a")
line = name_1 + '=' + str(score1) + '\n' + name_2 + '=' + str(score2) + '\n'
s.write(line)
s.close()
s = open(score_file, "r")
print()
print('final scores')
print(s.read())
s.close()

# caesar ciphon to encrypt data (i was not so sure about this one :/)
data = name_1, name_2
alphabet = 'abcdefghijklmnopqrstuvwxyz'
key = 5
encrypt = ''
for i in data:
    position = alphabet.find(i)
    new_position = (position + 5) % 26
    encrypt = alphabet[new_position]
    print(encrypt)
