# success criteria no. 2 : record the time played
import time
import os
start = time.time()

# define the function to clear the screen after each players' turn


def clear():
    os.system('clear' if os.name == 'posix' else 'clear')


print("hello, welcome to Let's Get Quizzical! :) Get ready to answer to the most random questions!")

# success criteria no. 4: make the game multiplayer - ask users to input their names
name_1 = input("Player 1:")
name_2 = input("Player 2:")
print('please answer all the questions with either "a", "b" or "c"')
print("Get ready..3..2..1")
time.sleep(3)
clear()

# success criteria no. 3 : record player scores
score1 = 0
score2 = 0

# define a function for each time it is player 1's turn


def turn_1():
    print(name_1, ',your turn')


# Question 1
turn_1()
ans = input('1. Which state has 1350 miles of coastline?\n a. Florida\n b. Colorado\n c. Kentucky\n answer:\n')


def right():
    print('Good answer!')


def wrong():
    print('Wrong!')


if ans.lower() == 'a':
    score1 += 1
    right()
else:
    score1 += 0
    wrong()

time.sleep(2)
clear()

# define a function for each time it is player 2's turn


def turn_2():
    print(name_2, ',your turn')


turn_2()
ans = input('1. Which state has 1350 miles of coastline?\n a. Florida\n b. Colorado\n c. Kentucky\n answer:\n')

if ans.lower() == 'a':
    score2 += 1
    right()
else:
    score2 += 0
    wrong()

time.sleep(2)
clear()

print('\nThe answer was: Florida.\n Additional fact: Florida has the longest coastline in the US',)

# define a function to display the current scores of the players after each question


def current_score():
    print('\nCurrent scores:\n', name_1, ':', score1, 'point(s)\n ', name_2, ':', score2, 'point(s)')
    print('')


current_score()

# Question 2
